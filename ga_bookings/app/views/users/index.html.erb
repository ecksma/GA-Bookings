<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to "#{user.full_name}", user %></td>
      <td><%= link_to image_tag(user.image.thumb), user %></td>
      <td><%= user.role %></td>
    </tr>
    <% end %>
  </tbody>
</table>
