<p id="notice"><%= notice %></p>

<h1>Users </h1>

<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
  <% @users.each do |user| %>
  <li>
    <%= link_to image_tag(user.image.thumb), user %> <br>
    <%= link_to "#{user.full_name}", user %> <br>
    <%= user.role %>
  </li>
  <% end %>
</ul>

