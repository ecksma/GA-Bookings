<p id="notice"><%= notice %></p>

<div class="user-index">
  <p>
    <%= image_tag @user.image.detail %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @user.full_name %>
  </p>
  <p>
    <strong>Role:</strong>
    <%= @user.role.humanize %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= mail_to(@user.email) %>
  </p>
  <p>
    <strong>Age:</strong>
    <%= distance_of_time_in_words_to_now(@user.dob) %>
  </p>
  <p>
    <strong>Gender:</strong>
    <%= @user.gender.humanize %>
  </p>
  <p>
    <strong>Cohorts:</strong>
    <% @user.contracts.each do |c| %>
    <li>
     <%= link_to "#{c.cohort.name}", c.cohort %>
   </li>
 </p>
 <% end %>
</div>

<p class="user-show-options">
  <% if can? :update, @user %>
  <%= link_to 'Edit', edit_user_registration_path(@user) %> |
  <%= link_to 'Back', users_path %>
  <% end %>
</p>
